<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/body_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/viewpager_ll"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/menu_productdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/productdetail_click" />

        <ImageButton
            android:id="@+id/menu_serviecelog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/servicelog_def" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/detail_pager"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_weight="10" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/bottom_ll"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="@color/bottom_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/updateservice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:background="@drawable/inservice_detail_updateservice_btn"
            android:text="更新服务"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>