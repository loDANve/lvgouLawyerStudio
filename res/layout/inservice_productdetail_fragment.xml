<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/body_bg" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/productname"
            style="@style/DetailProductNameStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="这里显示产品名称" />

        <RelativeLayout
            android:id="@+id/userinfo_rl"
            android:layout_width="340dp"
            android:layout_height="28dp"
            android:layout_below="@+id/productname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/borderstyle" >

            <ImageView
                android:id="@+id/userinfo_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/userinfo_icon" />

            <TextView
                android:id="@+id/username"
                style="@style/DetailTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/userinfo_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="锤子" />
            
            <TextView
                android:id="@+id/phonenumber"
                style="@style/DetailTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/username"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:text="13122334455" />
            
            <ImageButton
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:background="@drawable/call_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/territory_text"
            style="@style/DetailTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userinfo_rl"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:text="法律领域" />

        <TextView
            android:id="@+id/territory"
            style="@style/DetailContentStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/territory_text"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/territory_text"
            android:text="法律领域:" />

        <TextView
            android:id="@+id/servicearea_text"
            style="@style/DetailTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/territory_text"
            android:layout_below="@+id/territory_text"
            android:layout_marginTop="10dp"
            android:text="服务地区" />

        <TextView
            android:id="@+id/servicearea"
            style="@style/DetailContentStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/territory"
            android:layout_alignTop="@+id/servicearea_text"
            android:layout_toRightOf="@+id/servicearea_text"
            android:text="法律领域:" />

        <TextView
            android:id="@+id/allot_text"
            style="@style/DetailTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/territory_text"
            android:layout_below="@+id/servicearea_text"
            android:layout_marginTop="10dp"
            android:text="订单来源" />

        <TextView
            android:id="@+id/allot"
            style="@style/DetailContentStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/territory"
            android:layout_alignTop="@+id/allot_text"
            android:layout_toRightOf="@+id/allot_text"
            android:text="法律领域:" />

        <TextView
            android:id="@+id/remoteraise_text"
            style="@style/DetailTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/territory_text"
            android:layout_below="@+id/allot_text"
            android:layout_marginTop="10dp"
            android:text="异地加价" />

        <TextView
            android:id="@+id/remoteraise"
            style="@style/DetailContentStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/territory"
            android:layout_alignTop="@+id/remoteraise_text"
            android:layout_toRightOf="@+id/remoteraise_text"
            android:text="法律领域:" />

        <TextView
            android:id="@+id/arearaise_text"
            style="@style/DetailTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/territory_text"
            android:layout_below="@+id/remoteraise_text"
            android:layout_marginTop="10dp"
            android:text="地区加价" />

        <TextView
            android:id="@+id/arearaise"
            style="@style/DetailContentStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/territory"
            android:layout_alignTop="@+id/arearaise_text"
            android:layout_toRightOf="@+id/arearaise_text"
            android:text="法律领域:" />

        <TextView
            android:id="@+id/appoint_text"
            style="@style/DetailTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/territory_text"
            android:layout_below="@+id/arearaise_text"
            android:layout_marginTop="10dp"
            android:text="点名加价" />

        <TextView
            android:id="@+id/appoint"
            style="@style/DetailContentStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/territory"
            android:layout_alignTop="@+id/appoint_text"
            android:layout_toRightOf="@+id/appoint_text"
            android:text="法律领域:" />

        <TextView
            android:id="@+id/servicecost_text"
            style="@style/DetailTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/territory_text"
            android:layout_below="@+id/appoint_text"
            android:layout_marginTop="10dp"
            android:text="服务费用" />

        <TextView
            android:id="@+id/servicecost"
            style="@style/DetailContentStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/territory"
            android:layout_alignTop="@+id/servicecost_text"
            android:layout_toRightOf="@+id/servicecost_text"
            android:text="法律领域:" />

        <TextView
            android:id="@+id/income_text"
            style="@style/DetailTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/territory_text"
            android:layout_below="@+id/servicecost_text"
            android:layout_marginTop="10dp"
            android:text="服务费用" />

        <TextView
            android:id="@+id/income"
            style="@style/DetailContentStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/territory"
            android:layout_alignTop="@+id/income_text"
            android:layout_toRightOf="@+id/income_text"
            android:text="法律领域:" />

        <TextView
            android:id="@+id/remaining_text"
            style="@style/DetailTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/territory_text"
            android:layout_below="@+id/income_text"
            android:layout_marginTop="10dp"
            android:text="剩余时间" />

        <TextView
            android:id="@+id/remaining"
            style="@style/DetailContentStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/territory"
            android:layout_alignTop="@+id/remaining_text"
            android:layout_toRightOf="@+id/remaining_text"
            android:text="法律领域:" />

        <TextView
            android:id="@+id/demand"
            style="@style/DetailTitleStyle"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/demand_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/borderstyle"
            android:lineSpacingExtra="5dp"
            android:padding="15dp"
            android:text="需求需求需求需求需求需求需求需求需求需求需求需求需求需求需求需求" />

        <TextView
            android:id="@+id/demand_text"
            style="@style/DetailTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/territory_text"
            android:layout_below="@+id/remaining_text"
            android:layout_marginTop="10dp"
            android:background="@color/body_bg"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="需求描述" />

        <ListView
            android:id="@+id/attlist"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/att_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/borderstyle"
            android:divider="@color/line_color"
            android:dividerHeight="1px" />

        <TextView
            android:id="@+id/att_text"
            style="@style/DetailTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/territory_text"
            android:layout_below="@+id/demand"
            android:layout_marginTop="10dp"
            android:background="@color/body_bg"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="附件列表" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/attlist" />
    </RelativeLayout>

</ScrollView>