<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/intake_listitem_bg" >

    <LinearLayout
        android:id="@+id/orderno_ll"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="#cccccc"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/orderno_text"
            style="@style/ListOrdernoTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="订单编号:" />

        <TextView
            android:id="@+id/orderno"
            style="@style/ListOrdernoTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1231231230000000" />
    </LinearLayout>

    <TextView
        android:id="@+id/productname"
        style="@style/EditTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderno_ll"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="15dp"
        android:text="这里是产品名称" />

    <TextView
        android:id="@+id/produline"
        android:layout_width="310dp"
        android:layout_height="1px"
        android:layout_below="@+id/productname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/demand"
        style="@style/ListDateTextStyle"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/productname"
        android:layout_below="@+id/produline"
        android:layout_marginTop="15dp"
        android:text="需求描述需求描述需求描述需求描述需求描述需求描述需求描述需求描述" />

    <TextView
        android:id="@+id/demandline"
        android:layout_width="310dp"
        android:layout_height="1px"
        android:layout_below="@+id/demand"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/datetime_ll"
        style="@style/ListOrdernoTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/productname"
        android:layout_below="@+id/demandline"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="15dp" >

        <TextView
            android:id="@+id/datetime_text"
            style="@style/ListOrdernoTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下单时间:" />

        <TextView
            android:id="@+id/datetime"
            style="@style/ListDateTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014-06-29 15:21:12" />
    </LinearLayout>

</RelativeLayout>