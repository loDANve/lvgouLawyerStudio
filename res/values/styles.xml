<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="CustomWindowTitleBackground">
        <item name="android:background">@color/title_bg</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <item name="android:windowTitleSize">50dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!--
         <style name="wrap_content">
        <item name="android:width">wrap_content</item>
        <item name="android:height">wrap_content</item>
    </style>
    -->

    <style name="EditTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="BtnTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/btn_text</item>
    </style>

    <style name="MainTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ListOrdernoTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="ListDateTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#bbbbbb</item>
    </style>

    <style name="ListIncomeTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff9933</item>
    </style>

    <style name="ListWarningTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff3300</item>
    </style>

    <style name="DetailProductNameStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="DetailTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="DetailContentStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666666</item>
    </style>
    
    <style name="AccountIncomeTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="WithdrawDateTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#bbbbbb</item>
    </style>

</resources>